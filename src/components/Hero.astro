---
import HeroCarousel from '@/components/ui/HeroCarousel';
import { Button } from '@/components/ui/button';

const { title, description, firstbutton, secondbutton } = Astro.props;
---

<section class="bg-[#F6F6F6] overflow-hidden">
    <div
        class="py-24 custom-container flex justify-center items-center gap-16 lg:gap-8 lg:flex-row flex-col"
    >
        <div class="lg:w-1/2 w-full pr-10">
            <h1
                class="md:text-4xl text-3xl font-extrabold text-secondary font-serif md:leading-tight leading-snug text-shadow-lg tracking-widest"
                data-aos="zoom-in"
                data-aos-delay="200"
                data-aos-duration="1000"
            >
                {title}
            </h1>
            <p
                class="text-justify my-8 text-neutral-500"
                data-aos="zoom-in"
                data-aos-delay="400"
                data-aos-duration="1000"
            >
                {description}
            </p>
            <div
                class="flex justify-start items-start sm:flex-row flex-col gap-8"
                data-aos="zoom-in"
                data-aos-delay="600"
                data-aos-duration="1000"
            >
                <Button
                    className="h-[70px] w-full sm:w-fit py-5 px-6 text-xl font-semibold hover:bg-primary hover:opacity-80 text-white">
                    {firstbutton.text}
                </Button>

                <Button
                    variant="outline"
                    className="w-full sm:w-fit h-[70px] py-5 px-6 text-xl font-semibold hover:bg-transparent hover:opacity-80 text-black">
                    {secondbutton.text}
                </Button>
            </div>
        </div>
        <div class="lg:w-1/2 w-full relative">
          <HeroCarousel client:load />
        </div>
    </div>
</section>

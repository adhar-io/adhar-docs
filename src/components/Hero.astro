---

const { title, description, firstbutton, secondbutton } = Astro.props;
---

<section class="bg-[#F6F6F6] overflow-hidden">
    <div
        class="pt-16 lg:pt-0 custom-container flex justify-center items-center gap-16 lg:gap-8 lg:flex-row flex-col"
    >
        <div class="lg:w-1/2 w-full">
            <h1
                class="md:text-4xl text-3xl font-semibold tracking-widest leading-relaxed"
                data-aos="zoom-in"
                data-aos-delay="200"
                data-aos-duration="1000"
            >
                {title}
            </h1>
            <p
                class="text-muted my-8"
                data-aos="zoom-in"
                data-aos-delay="400"
                data-aos-duration="1000"
            >
                {description}
            </p>
            <div
                class="flex justify-start items-start sm:flex-row flex-col gap-8"
                data-aos="zoom-in"
                data-aos-delay="600"
                data-aos-duration="1000"
            >
                <a
                    href={firstbutton.link}
                    class="bg-primary rounded-[10px] h-[70px] w-full text-center sm:w-fit py-5 px-6 text-xl font-semibold text-white"
                    >{firstbutton.text}</a
                >

                <a
                    href={secondbutton.link}
                    class="border-2 border-black rounded-[10px] w-full text-center sm:w-fit h-[70px] py-5 px-6 text-xl font-semibold text-black"
                    >{secondbutton.text}</a
                >
            </div>
        </div>
        <div class="lg:w-1/2 w-full h-[600px] relative overflow-hidden">
            <div
                class="absolute top-0 h-24 w-full bg-gradient-to-b from-white to-transparent"
            >
            </div>
            <div
                class="absolute bottom-0 h-32 w-full bg-gradient-to-t from-white to-transparent"
            >
            </div>
            <div class="photobanner">
                <img
                    class="first lg:max-h-[300px] max-h-[400px] w-full object-cover mb-4 rounded-lg"
                    src="/assets/imgs/Christina Deravedisian Unsplash.jpg"
                    alt=""
                />
                <img
                    src="/assets/imgs/Fabian Irsara Unsplash.jpg"
                    class="lg:max-h-[300px] max-h-[400px] w-full object-cover mb-4 rounded-lg"
                    alt=""
                />
                <img
                    src="/assets/imgs/Ionela Mat from Fiverr.jpg"
                    class="lg:max-h-[300px] max-h-[400px] w-full object-cover mb-4 rounded-lg"
                    alt=""
                />
                <img
                    src="/assets/imgs/Mona Jain Unsplash.jpg"
                    class="lg:max-h-[300px] max-h-[400px] w-full object-cover mb-4 rounded-lg"
                    alt=""
                />
                <img
                    src="/assets/imgs/Christina Deravedisian Unsplash.jpg"
                    alt=""
                    class="lg:max-h-[300px] max-h-[400px] w-full object-cover mb-4 rounded-lg"
                />
                <img
                    src="/assets/imgs/Fabian Irsara Unsplash.jpg"
                    class="lg:max-h-[300px] max-h-[400px] w-full object-cover mb-4 rounded-lg"
                    alt=""
                />
                <img
                    src="/assets/imgs/Ionela Mat from Fiverr.jpg"
                    class="lg:max-h-[300px] max-h-[400px] w-full object-cover mb-4 rounded-lg"
                    alt=""
                />
                <img
                    src="/assets/imgs/Mona Jain Unsplash.jpg"
                    class="lg:max-h-[300px] max-h-[400px] w-full object-cover mb-4 rounded-lg"
                    alt=""
                />
                <img
                    src="/assets/imgs/Fabian Irsara Unsplash.jpg"
                    class="lg:max-h-[300px] max-h-[400px] w-full object-cover mb-4 rounded-lg"
                    alt=""
                />
                <img
                    src="/assets/imgs/Ionela Mat from Fiverr.jpg"
                    class="lg:max-h-[300px] max-h-[400px] w-full object-cover mb-4 rounded-lg"
                    alt=""
                />
            </div>
        </div>
    </div>
</section>
<style>
    .first {
        animation: bannermove 50s linear infinite;
    }

    @keyframes bannermove {
        0% {
            margin-top: 0px;
        }
        100% {
            margin-top: -2125px;
        }
    }
</style>

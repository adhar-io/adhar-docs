---
import { Dropdown as DropdownContainer, DropdownItems } from "astro-navbar";
const { title, lastItem, children } = Astro.props;
---

<li class="relative z-50">
  <DropdownContainer class="group">
    <button
      class="flex items-center justify-between gap-1 re text-lg w-full lg:w-auto h-[50px] lg:h-auto border-b lg:border-b-0  py-2 text-textColor"
    >
      <span>{title}</span>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="3"
        stroke="currentColor"
        class="w-3 h-3 mt-0.5 group-open:rotate-180"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
      </svg>
    </button>
    <DropdownItems>
      <div
        class:list={[
          "lg:absolute w-full top-12 lg:w-48 z-10",
          lastItem
            ? "lg:right-0 "
            : "lg:left-0 ",
        ]}
      >
        <div
          class="px-3 lg:py-2 lg:bg-white lg:rounded-md lg:shadow lg:border flex flex-col"
        >
          {
            children.map((item:any) => (
              <a
                href={item.link}
                class="py-1 text-gray-600 hover:text-gray-900"
              >
                {item.title}
              </a>
            ))
          }
        </div>
      </div>
    </DropdownItems>
  </DropdownContainer>
</li>

---
const { icon, index, title, description } = Astro.props;
---

<div
    class="bg-white rounded-lg relative border-primary border py-5 px-4 h-full"
    style="box-shadow: 0px 36px 36px rgba(51, 51, 51, 0.15);"
>
    <div class="flex mb-3">
        <img src={icon} alt="" />
    </div>
    <span
        class="absolute top-0 right-0 w-12 h-12 rounded-bl-[50%] rounded-tr-md bg-primary text-xl font-semibold text-white flex justify-center items-center"
    >
        {index + 1}</span
    >

    <h3 class="text-lg font-semibold text-paraColor mb-2">{title}</h3>
    <p class="text-paraColor opacity-50 text-sm">{description}</p>
</div>

---
import BlogLatestPosts from '@/components/sections/BlogLatestPosts.astro';
import CallToAction from '@/components/sections/CallToAction.astro';
import Content from '@/components/sections/Content.astro';
import FAQs from '@/components/sections/FAQs.astro';
import Features from '@/components/sections/Features.astro';
import Features2 from '@/components/sections/Features2.astro';
import Hero from '@/components/sections/Hero.astro';
import Note from '@/components/sections/Note.astro';
import Stats from '@/components/sections/Stats.astro';
import Steps from '@/components/sections/Steps.astro';
import Layout from '@/layouts/PageLayout.astro';

const metadata = {
  title: 'Adhar.io - Open Foundation for Modern Businesses',
  ignoreTitleTemplate: true
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Try Adhar Cloud',
        href: 'https://console.adhar.io',
        target: '_blank',
        icon: 'tabler:download'
      },
      { text: 'Learn more', href: 'https://adhar.io/docs' }
    ]}
    image={{ src: '/imgs/hero-foundation.jpg', alt: 'Adhar Hero Image' }}
  >
    <Fragment slot='title'>
      All-in-One <span class='highlight text-accent dark:text-white'
        >Internal Developer Platform</span
      > to define, design, develop, deliver & discover cloud-native applications
    </Fragment>

    <Fragment slot='subtitle'>
      <span class='hidden sm:inline'>
        <span class='font-semibold'>Adhar</span> is an open-source enterprise
        platform that empowers modern businesses to prioritize application
        development instead of dedicating resources to building and maintaining
        in-house platforms.</span
      >
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note />

  <!-- Features Widget *************** -->

  <Features
    id='features'
    tagline='Features'
    title='What you get with Adhar Platform'
    subtitle='One of the most professional and comprehensive platforms currently on the market. Most starred & forked platform in 2022.'
    items={[
      {
        title: 'Internal Developer Platform',
        description:
          'Adhar provides a fully integrated development platform with built-in support for popular programming languages, databases, and application frameworks.',
        icon: 'tabler:brand-tailwind'
      },
      {
        title: 'Self Service & Provisioning',
        description:
          'Adhar\'s Self Service and Provisioning feature automates the process of deploying your applications, allowing you to deliver new features and updates faster and with less risk.',
        icon: 'tabler:components'
      },
      {
        title: 'Fully Managed Services',
        description:
          'Adhar provides Fully Managed Services that take care of all your application needs, freeing you from the complexity of managing these components yourself.',
        icon: 'tabler:list-check'
      },
      {
        title: 'Great Developer Experience',
        description:
          'Adhar platform provides a great developer experience with its intuitive interface, comprehensive documentation, and supportive community.',
        icon: 'tabler:rocket'
      },
      {
        title: 'AI Augmented Development',
        description:
          'Adhar platform leverages AI to augment the development process, enhancing productivity and code quality.',
        icon: 'tabler:arrows-right-left'
      },
      {
        title: 'Rapid Application Development',
        description:
          'Adhar platform supports Rapid Application Development with its wide range of programming languages and frameworks, automated deployments, and managed services.',
        icon: 'tabler:bulb'
      }
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline='Inside Adhar'
    title='Adhar Platform: Where Innovation Meets Execution'
    items={[
      {
        title: 'Support for Multiple Languages and Frameworks',
        description:
          'Adhar supports a wide range of programming languages and frameworks, including Angular, Go, Java, JavaScript, Python, React, and TypeScript, among others.'
      },
      {
        title: 'Open-Source Platform',
        description:
          'Adhar is an open-source platform that provides a set of integrated tools for building, deploying, and managing cloud-native applications.'
      },
      {
        title: 'Cloud-Native Architecture',
        description:
          'Adhar is designed for the cloud, with support for containerized applications, automated deployments, and managed services.'
      }
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Colorful Image'
    }}
  >
    <Fragment slot='content'>
      <h3
        class='mb-2 text-2xl font-bold tracking-tight dark:text-white sm:text-3xl'
      >
        Building on modern foundations
      </h3>
       With Adhar, you can leverage the latest technologies and best practices
      to build, deploy, and manage cloud-native applications more effectively.
    </Fragment>

    <Fragment slot='bg'>
      <div class='absolute inset-0 bg-blue-50 dark:bg-transparent'></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: 'High level of customization',
        description:
          "Tailor the template effortlessly to match your brand's identity and requirements, making your website distinct and saving you time."
      },
      {
        title: 'Multiple layout possibilities',
        description:
          'Explore various layout options to find the structure that best presents your content, enhancing user engagement and navigation.'
      },
      {
        title: 'Fully responsive design',
        description:
          "Ensure your website's optimal performance on various devices and screen sizes, providing a consistent and enjoyable user experience."
      },
      {
        title: 'Integration of media',
        description:
          'Seamlessly incorporate images, videos, and multimedia elements that enhance your content and engage visitors effectively.'
      }
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1600132806370-bf17e65e942f?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2194&q=80',
      alt: 'Blueprint Image'
    }}
  >
    <Fragment slot='content'>
      Ensure your online presence truly represents you.
    </Fragment>

    <Fragment slot='bg'>
      <div class='absolute inset-0 bg-blue-50 dark:bg-transparent'></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    isAfterContent
    items={[
      {
        title: 'Enhanced user engagement',
        description:
          'Captivate your audience with interactive elements, intuitive navigation, and visually appealing layouts, encouraging longer visits.'
      },
      {
        title: 'Continuous improvement',
        description:
          'Ensure your website stays aligned with the latest trends and technologies through regular updates and enhancements.'
      },
      {
        title: 'Time and resource efficiency',
        description:
          'Skip the time-consuming process of building a website from scratch and launch your online presence sooner with AstroWind.'
      },
      {
        title: 'Community support',
        description:
          "Join the growing AstroWind community for insights, resources, and assistance, ensuring you're never alone on your web development journey."
      }
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1611462985358-60d3498e0364?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Astronauts Image'
    }}
  >
    <Fragment slot='content'>Designed to foster growth and success.</Fragment>

    <Fragment slot='bg'>
      <div class='absolute inset-0 bg-blue-50 dark:bg-transparent'></div>
    </Fragment>
  </Content>

  <!-- Steps Widget ****************** -->

  <Steps
    title='Get started with Adhar platform in no time.'
    items={[
      {
        title: 'Step 1: <span class="font-medium">Download</span>',
        description:
          'Start with GitHub! Fork the Adhar platform repository or simply click "Use this template". Your development environment is ready in just a few clicks.',
        icon: 'tabler:package'
      },
      {
        title: 'Step 2: <span class="font-medium">Choose your language</span>',
        description:
          'Adhar supports a wide range of programming languages including Angular, Go, Java, JavaScript, Python, React, and TypeScript. Choose the one that suits your project best.',
        icon: 'tabler:letter-case'
      },
      {
        title: 'Step 3: <span class="font-medium">Manage dependencies</span>',
        description:
          'Adhar integrates with popular package managers like npm, yarn, pip, and Maven. Manage your project dependencies with ease.',
        icon: 'tabler:paint'
      },
      {
        title: 'Step 4: <span class="font-medium">Deploy</span>',
        description:
          'Adhar is designed for the cloud, with support for containerized applications, automated deployments, and managed services. Deploy your application with just a few clicks.',
        icon: 'tabler:check'
      }
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1616198814651-e71f960c3180?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=987&q=80',
      alt: 'Steps image'
    }}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title='Adhar Platform Features'
    subtitle='Adhar provides a set of integrated tools for building, deploying, and managing cloud-native applications.'
    tagline='Features'
    items={[
      {
        title: 'Multiple Languages and Frameworks',
        description:
          'Adhar supports a wide range of programming languages and frameworks, including Angular, Go, Java, JavaScript, Python, React, and TypeScript, among others.',
        icon: 'flat-color-icons:template'
      },
      {
        title: 'Built-In Package Managers',
        description:
          'Adhar integrates with popular package managers like npm, yarn, pip, and Maven, simplifying dependency management and accelerating development.',
        icon: 'flat-color-icons:gallery'
      },
      {
        title: 'Cloud-Native Architecture',
        description:
          'Adhar is designed for the cloud, with support for containerized applications, automated deployments, and managed services.',
        icon: 'flat-color-icons:approval'
      },
      {
        title: 'Open-Source Platform',
        description:
          'Adhar is an open-source platform that provides a set of integrated tools for building, deploying, and managing cloud-native applications.',
        icon: 'flat-color-icons:document'
      },
      {
        title: 'Scalability',
        description:
          'Adhar platform is designed to scale with your application. It can handle increased load by automatically adding resources when they are needed.',
        icon: 'flat-color-icons:template'
      },
      {
        title: 'Security',
        description:
          'Adhar platform provides robust security features, including automatic updates, secure service credentials, and isolation policies to protect your applications.',
        icon: 'flat-color-icons:gallery'
      },
      {
        title: 'Continuous Integration/Continuous Deployment',
        description:
          'Adhar platform supports CI/CD, allowing you to automate your development process, from code commit to production deployment.',
        icon: 'flat-color-icons:approval'
      },
      {
        title: 'Monitoring and Analytics',
        description:
          'Adhar platform provides monitoring and analytics tools that give you insights into your application performance and usage patterns.',
        icon: 'flat-color-icons:document'
      }
    ]}
  >
    <Fragment slot='bg'>
      <div class='absolute inset-0 bg-blue-50 dark:bg-transparent'></div>
    </Fragment>
  </Features2>

  <!-- HighlightedPosts Widget ******* -->

  <BlogLatestPosts title='Find out more content in our Blog' information={} />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title='Frequently Asked Questions'
    subtitle='Dive into the following questions to gain insights into the powerful features that Adhar offers and how it can elevate your web development journey.'
    tagline='FAQs'
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'Why Adhar?',
        description:
          'Adhar is a comprehensive platform that supports a wide range of programming languages and frameworks, simplifying the development and deployment of cloud-native applications.'
      },
      {
        title: 'What do I need to start with Adhar?',
        description:
          'To start with Adhar, you need to have a basic understanding of the programming language and framework that you are planning to use. Adhar supports Angular, Go, Java, JavaScript, Python, React, and TypeScript, among others.'
      },
      {
        title: 'How to install the Adhar platform?',
        description:
          'Adhar platform can be installed using popular package managers like npm, yarn, pip, and Maven. Detailed installation instructions are provided in the Adhar documentation.'
      },
      {
        title: 'What security features does Adhar provide?',
        description:
          'Adhar provides robust security features, including automatic updates, secure service credentials, and isolation policies to protect your applications.'
      },
      {
        title: 'Does Adhar support scalability?',
        description:
          'Yes, Adhar platform is designed to scale with your application. It can handle increased load by automatically adding resources when they are needed.'
      },
      {
        title: 'Does Adhar support CI/CD?',
        description:
          'Yes, Adhar platform supports Continuous Integration/Continuous Deployment, allowing you to automate your development process, from code commit to production deployment.'
      }
    ]}
  />

  <!-- Stats Widget ****************** -->

  <Stats
    stats={[
      { title: 'Downloads', amount: '132K' },
      { title: 'Stars', amount: '24.8K' },
      { title: 'Forks', amount: '10.3K' },
      { title: 'Users', amount: '48.4K' }
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Signup Now!',
        href: 'https://adharcloud.com/free-trial',
        target: '_blank',
        icon: 'tabler:cloud-download'
      }
    ]}
  >
    <Fragment slot='title'>Try Adhar Cloud for Free</Fragment>

    <Fragment slot='subtitle'>
      Experience the power and flexibility of Adhar Cloud. Start your free trial
      today!
    </Fragment>
  </CallToAction>
</Layout>

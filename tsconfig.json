{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "verbatimModuleSyntax": true,
    "allowJs": false,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "jsxImportSource": "react"
  },
  "include": [
    "src",
    "astro.config.mjs",
    ".eslintrc.mjs",
    "**/*.js",
    "**/*.ts",
    "**/*.cjs",
    "**/*.mjs",
    "./tailwind.config.ts"
  ]
}